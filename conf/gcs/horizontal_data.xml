<!DOCTYPE layout SYSTEM "layout.dtd">

<layout width="975" height="716">
  <rows>
    <widget NAME="map2d" size="503">
      <papget type="message_field" display="text" x="800" y="20">
        <property name="scale" value="1."/>
        <property name="field" value="AIR_DATA:amsl_baro"/>
        <property name="format" value="z = %.1f m"/>
        <property name="size" value="15."/>
        <property name="color" value="yellow"/>
      </papget>
      <papget type="message_field" display="text" x="10" y="175">
        <property name="scale" value="1."/>
        <property name="field" value="RC:values[2]"/>
        <property name="format" value="yaw = %.0f"/>
        <property name="size" value="15."/>
        <property name="color" value="white"/>
      </papget>
      <papget type="message_field" display="text" x="800" y="60">
        <property name="scale" value="1."/>
        <property name="field" value="SHT_STATUS:humid"/>
        <property name="format" value="RH = %.1f perc"/>
        <property name="size" value="15."/>
        <property name="color" value="lightgreen"/>
      </papget>
      <papget type="message_field" display="text" x="800" y="40">
        <property name="scale" value="1."/>
        <property name="field" value="SHT_STATUS:temp"/>
        <property name="format" value="T  = %.1f degC"/>
        <property name="size" value="15."/>
        <property name="color" value="blue"/>
      </papget>
      <papget type="message_field" display="text" x="8" y="149">
        <property name="scale" value="1."/>
        <property name="field" value="RC:values[1]"/>
        <property name="format" value="pitch = %.0f"/>
        <property name="size" value="15."/>
        <property name="color" value="white"/>
      </papget>
      <papget type="message_field" display="text" x="8" y="126">
        <property name="scale" value="1."/>
        <property name="field" value="RC:values[0]"/>
        <property name="format" value="roll = %.0f"/>
        <property name="size" value="15."/>
        <property name="color" value="white"/>
      </papget>
      <papget type="message_field" display="text" x="8" y="203">
        <property name="scale" value="1."/>
        <property name="field" value="RC:values[3]"/>
        <property name="format" value="throttle = %.0f"/>
        <property name="size" value="15."/>
        <property name="color" value="white"/>
      </papget>
    </widget>
    <columns>
      <rows SIZE="410">
        <widget NAME="strips" size="275"/>
      </rows>
      <widget NAME="aircraft" size="480"/>
      <widget NAME="alarms" size="54"/>
    </columns>
  </rows>
</layout>
