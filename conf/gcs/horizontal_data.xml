<layout width="975" height="744">
  <rows>
    <widget SIZE="500" NAME="map2d">
      <papget type="message_field" display="text" x="750" y="80">
        <property name="scale" value="1."/>
        <property name="field" value="SHT_STATUS:humid"/>
        <property name="format" value="RH = %.1f perc"/>
        <property name="size" value="15."/>
        <property name="color" value="green"/>
      </papget>
      <papget type="message_field" display="text" x="750" y="40">
        <property name="scale" value="1."/>
        <property name="field" value="TMP_STATUS:temp"/>
        <property name="format" value="T_TMP= %.2f degC"/>
        <property name="size" value="15."/>
        <property name="color" value="green"/>
      </papget>
      <papget type="message_field" display="text" x="750" y="20">
        <property name="scale" value="1."/>
        <property name="field" value="ESTIMATOR:z"/>
        <property name="format" value="alt = %.1f m"/>
        <property name="size" value="15."/>
        <property name="color" value="green"/>
      </papget>
      <papget type="message_field" display="text" x="750" y="60">
        <property name="scale" value="1."/>
        <property name="field" value="SHT_STATUS:temp"/>
        <property name="format" value="T_SHT = %.2f degC"/>
        <property name="size" value="15."/>
        <property name="color" value="green"/>
      </papget>
    </widget>
    <columns>
      <rows SIZE="375">
        <widget SIZE="200" NAME="strips"/>
      </rows>
      <widget SIZE="400" NAME="aircraft"/>
      <widget NAME="alarms"/>
    </columns>
  </rows>
</layout>
