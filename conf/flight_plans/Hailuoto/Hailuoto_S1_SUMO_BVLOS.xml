<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="70" ground_alt="0" lat0="65 02 22" lon0="24 33 04" max_dist_from_home="1500" name="Hailuoto S1 SUMO" qfu="180" security_height="70">
  <header>
#include "subsystems/navigation/nav_line.h"
#include "subsystems/datalink/datalink.h"
</header>
  <waypoints>
    <waypoint lat="65.0783" lon="24.5139" name="_DA1"/>
    <waypoint lat="65.059046" lon="24.603193" name="_DA2"/>
    <waypoint lat="65.038377" lon="24.567411" name="_DA3"/>
    <waypoint lat="65.016507" lon="24.584662" name="_DA4"/>
    <waypoint lat="65.0158" lon="24.47" name="_DA5"/>
    <waypoint lat="65.0514" lon="24.46" name="_DA6"/>
    <waypoint height="1900.0" name="_MAX_ALT" x="-10" y="10"/>
    <waypoint alt="40.0" name="pdown" x="-54.0" y="179.5"/>
    <waypoint alt="1800.0" name="pup" x="-53.6" y="210.9"/>
    <waypoint lat="65.037893" lon="24.558011" name="FMI_Sodar"/>
    <waypoint lat="65.039653" lon="24.5552350" name="MFAS_Sodar"/>
    <waypoint lat="65.0359710" lon="24.5556280" name="Flux2"/>
    <waypoint lat="65.036463" lon="24.55480" name="Flux1"/>
    <waypoint name="HOME" x="148.2" y="-141.0"/>
    <waypoint alt="100.0" name="1" x="-1017.7" y="-602.9"/>
    <waypoint alt="100.0" name="2" x="387.1" y="854.4"/>
    <waypoint name="S1" x="480.9" y="382.8"/>
    <waypoint name="S1a" x="540.5" y="300.4"/>
    <waypoint name="S1b" x="420.5" y="200.4"/>
    <waypoint name="S2" x="-27.3" y="620.9"/>
    <waypoint name="MOB" x="209.5" y="149.7"/>
    <waypoint alt="100.0" name="C_ICE" x="127.5" y="-111.5"/>
    <waypoint alt="100.0" name="C_HARBOR" x="56.4" y="291.4"/>
    <waypoint alt="100.0" name="START" x="222.7" y="-143.5"/>
    <waypoint name="_BASELEG" x="61.7" y="-337.5"/>
    <waypoint alt="50.0" name="AF" x="6.3" y="-57.6"/>
    <waypoint alt="0.0" name="TD" x="40.3" y="-135.5"/>
    <waypoint name="P1" x="65.2" y="323.7"/>
  </waypoints>
  <exceptions>
    <exception cond="estimator_z > WaypointAlt(WP__MAX_ALT)" deroute="circle_ice"/>
    <exception cond="datalink_time > 140" deroute="circle_ice"/>
    <exception cond="10.0 > PowerVoltage()" deroute="circle_ice"/>
  </exceptions>
  <blocks>
    <block name="start">
      <attitude pitch="20" roll="0" throttle="0.99" until="(estimator_flight_time > 5)" vmode="throttle"/>
      <go wp="START"/>
    </block>
    <block name="circle_ice" strip_button="c_ice">
      <circle radius="nav_radius" wp="C_ICE"/>
    </block>
    <block name="circle_harbor" strip_button="c_harbor">
      <circle radius="nav_radius" wp="C_HARBOR"/>
    </block>
    <block group="prof_up" name="go_prof" strip_button="go profile 5deg" strip_icon="up_profile.png">
      <set value="100+ground_alt" var="waypoints[WP_P1].a"/>
      <circle radius="nav_radius" until="NavCircleCount() > 1" wp="P1"/>
      <deroute block="prof_down_start"/>
    </block>
    <block name="prof_down_start">
      <set value="WaypointAlt(WP_pdown)" var="waypoints[WP_P1].a"/>
      <circle radius="nav_radius" until="stage_time > 0.1" wp="P1"/>
      <circle pitch="-5" radius="nav_radius" throttle="0.0" until="5 > (GetPosAlt() - WaypointAlt(WP_P1))" vmode="throttle" wp="P1"/>
      <circle radius="nav_radius" until="NavCircleCount() > 1" wp="P1"/>
      <deroute block="prof_up_5deg"/>
    </block>
    <block name="prof_up_5deg">
      <set value="WaypointAlt(WP_pup)" var="waypoints[WP_P1].a"/>
      <circle radius="nav_radius" until="stage_time > 0.1" wp="P1"/>
      <circle pitch="5" radius="nav_radius" throttle="0.95" until="(GetPosAlt() - WaypointAlt(WP_P1)) > -5" vmode="throttle" wp="P1"/>
      <circle radius="nav_radius" until="NavCircleCount() > 1" wp="P1"/>
      <deroute block="prof_down_10deg"/>
    </block>
    <block group="prof_up" name="prof_up_7_5deg" strip_button="profile up 7.5deg" strip_icon="up_profile_l.png">
      <set value="WaypointAlt(WP_pup)" var="waypoints[WP_P1].a"/>
      <circle radius="nav_radius" until="stage_time > 0.1" wp="P1"/>
      <circle pitch="7.5" radius="nav_radius" throttle="0.95" until="(GetPosAlt() - WaypointAlt(WP_P1)) > -5" vmode="throttle" wp="P1"/>
      <circle radius="nav_radius" until="NavCircleCount() > 1" wp="P1"/>
      <deroute block="prof_down_5deg"/>
    </block>
    <block group="prof_down" name="prof_down_5deg" strip_button="profile down 5 deg" strip_icon="down_profile_l.png">
      <set value="WaypointAlt(WP_pdown)" var="waypoints[WP_P1].a"/>
      <circle radius="nav_radius" until="stage_time > 0.1" wp="P1"/>
      <circle pitch="-5" radius="nav_radius" throttle="0.0" until="5 > (GetPosAlt() - WaypointAlt(WP_P1))" vmode="throttle" wp="P1"/>
      <circle radius="nav_radius" until="NavCircleCount() > 1" wp="P1"/>
      <deroute block="circle_harbor"/>
    </block>
    <block group="prof_down" name="prof_down_10deg" strip_button="profile down 10 deg" strip_icon="down_profile_h.png">
      <set value="WaypointAlt(WP_pdown)" var="waypoints[WP_P1].a"/>
      <circle radius="nav_radius" until="stage_time > 0.1" wp="P1"/>
      <circle pitch="-10" radius="nav_radius" throttle="0.0" until="5 > (GetPosAlt() - WaypointAlt(WP_P1))" vmode="throttle" wp="P1"/>
      <circle radius="nav_radius" until="NavCircleCount() > 1" wp="P1"/>
      <deroute block="circle_harbor"/>
    </block>
    <block name="Line 1-2">
      <call fun="nav_line_init()"/>
      <call fun="nav_line(WP_1, WP_2, nav_radius)"/>
    </block>
    <block name="Oval 1-2">
      <oval p1="1" p2="2" radius="nav_radius"/>
    </block>
    <block name="Survey S1-S2 NS">
      <go wp="S1b"/>
      <go wp="S1"/>
      <survey_rectangle grid="240" wp1="S1" wp2="S2"/>
    </block>
    <block name="Survey S1-S2 WE">
      <go wp="S1a"/>
      <go wp="S1"/>
      <survey_rectangle grid="240" orientation="WE" wp1="S1" wp2="S2"/>
    </block>
    <block name="MOB">
      <call fun="NavSetWaypointHere(WP_MOB)"/>
      <set value="DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <circle radius="nav_radius" wp="MOB"/>
    </block>
    <block name="profile 1 up">
      <for from="0" to="2" var="i">
        <set value="10+30+40*$i" var="waypoints[WP_P1].a"/>
        <circle radius="nav_radius" until="NavCircleCount() > 3" wp="P1"/>
      </for>
      <deroute block="profile 1 down"/>
    </block>
    <block name="profile 1 down">
      <for from="0" to="2" var="i">
        <set value="10+30+80-40*$i" var="waypoints[WP_P1].a"/>
        <circle radius="nav_radius" until="NavCircleCount() > 3" wp="P1"/>
      </for>
      <deroute block="profile 1 up"/>
    </block>
    <block name="Land Right AF-TD" strip_button="Land right (wp AF-TD)" strip_icon="land-right.png">
      <set value="DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <deroute block="land"/>
    </block>
    <block name="Land Left AF-TD" strip_button="Land left (wp AF-TD)" strip_icon="land-left.png">
      <set value="-DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <deroute block="land"/>
    </block>
    <block name="land">
      <call fun="nav_compute_baseleg(WP_AF, WP_TD, WP__BASELEG, nav_radius)"/>
      <circle radius="nav_radius" until="NavCircleCount() > 0.5" wp="_BASELEG"/>
      <circle radius="nav_radius" until="NavQdrCloseTo(DegOfRad(baseleg_out_qdr)-(nav_radius/fabs(nav_radius))*10) && 20 > fabs(estimator_z - WaypointAlt(WP__BASELEG))" wp="_BASELEG"/>
    </block>
    <block name="final">
      <exception cond="ground_alt + 10 > estimator_z" deroute="flare"/>
      <go from="AF" hmode="route" vmode="glide" wp="TD"/>
    </block>
    <block name="flare">
      <go approaching_time="0" from="AF" hmode="route" throttle="0.0" vmode="throttle" wp="TD"/>
      <attitude roll="0.0" throttle="0.0" until="FALSE" vmode="throttle"/>
    </block>
    <block group="downdown" name="down" strip_button="Down" strip_icon="downdown.png">
      <set value="LATERAL_MODE_ROLL" var="lateral_mode"/>
      <set value="V_CTL_MODE_MANUAL" var="v_ctl_mode"/>
      <set value="TRUE" var="h_ctl_disabled"/>
      <set value="(-0.6*MAX_PPRZ)" var="h_ctl_aileron_setpoint"/>
      <set value="(0.9*MAX_PPRZ)" var="h_ctl_elevator_setpoint"/>
      <while cond="(GetPosAlt() > ground_alt + 140)"/>
      <set value="0" var="h_ctl_aileron_setpoint"/>
      <set value="0" var="h_ctl_elevator_setpoint"/>
    </block>
    <block group="downdown" name="down_end" strip_button="DownEnd" strip_icon="downdownend.png">
      <set value="0" var="h_ctl_aileron_setpoint"/>
      <set value="0" var="h_ctl_elevator_setpoint"/>
      <while cond="1.> stage_time"/>
      <set value="FALSE" var="h_ctl_disabled"/>
      <deroute block="circle_ice"/>
    </block>
  </blocks>
</flight_plan>
